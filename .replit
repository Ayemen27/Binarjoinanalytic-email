modules = ["php-8.3", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip", "php83", "php83Packages.composer"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34211
externalPort = 3003

[[ports]]
localPort = 34495
externalPort = 4200

[[ports]]
localPort = 36153
externalPort = 3001

[[ports]]
localPort = 36891
externalPort = 3002

[[ports]]
localPort = 38721
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["php", "artisan", "serve", "--host=0.0.0.0", "--port=5000"]
